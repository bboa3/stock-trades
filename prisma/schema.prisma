generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int               @id @default(autoincrement())
  name                String 
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @default(now())
  trades              Trade[]
  @@map("users")
}


model Trade {
  id                  Int               @id @default(autoincrement())
  type                String     
  symbol              String
  shares              Int
  price               Decimal
  user                User              @relation(fields: [userId], references: [id])
  userId              Int
  timestamp           String      
  @@map("trades")
}
